<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.maria_study_app.ui.fragments.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_firstFragment_to_myDialog"
            app:destination="@id/myDialog" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.maria_study_app.ui.fragments.SecondFragment"
        android:label="SecondFragment" />
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.maria_study_app.ui.fragments.ThirdFragment"
        android:label="ThirdFragment" />
    <dialog
        android:id="@+id/myDialog"
        android:name="com.example.maria_study_app.ui.dialog.MyDialog"
        android:label="MyDialog" />
</navigation>